= form_for group do |f|
  - if group.errors.any?
    .chat-group-form__errors
      %h2= "#{group.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - group.errors.full_messages.each do |message|
          %li= message

  / 編集するグループ名  
  .chat-group-form__field
    .chat-group-form__field--left
      = f.label :name, class: 'chat-group-form__label'
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: 'グループ名を入力してください'

  / メンバーを追加するためのフォーム  
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :"チャットメンバーの追加", class: "chat-group-form__label" 
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        %input#user-search-field.chat-group-form__input{placeholder: "追加したいユーザー名を入力してください"} 
      #user-search-result

  / 追加したメンバー名全てを表示  
  .chat-group-form__field.clearfix  
    .chat-group-form__field--left  
      = f.label :"チャットメンバー", class:"chat-group-form__label"  
    .chat-group-form__field--right  
      #chat-group-users  
        .chat-group-user.clearfix  
          %input{name: "group[user_ids][]", type: "hidden", value: "#{current_user.id}", class: "user-js"}  
          %p.chat-group-user__name  
            = current_user.name  
        - group.users.where.not(id: current_user.id).each do |groupname|
          .chat-group-user.clearfix  
            = f.hidden_field :user_ids, value: groupname.id, name: "group[user_ids][]", class: "user-js"
            %p.chat-group-user__name  
              = groupname.name


  / 情報の更新ボタン
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'